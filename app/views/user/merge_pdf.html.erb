<%= form_tag user_do_merge_pdf_path(@user)  ,role: "form",method: :post, id:"form", :multipart => true do %>
<div class="row">
	<div class="col s12 m6">
		<div class="card blue-grey darken-1">
			<% if flash[:notice] %>
				<div class="white-text" style="text-align:center " id="flash-notice"><%= flash[:notice] %></div>
	    		<% end %>
			<div class="card-content white-text">
				<span class="card-title">Choose Muliple Files</span>
				<p><%= file_field_tag "pdf[]", multiple: true %></p>
			</div>
			<div class="card-action">
				<%= submit_tag "Upload File",class:"btn btn-primary " %>
			</div>
		</div>
	</div>
</div>
<% end %>

<script type="text/javascript">
$(document).ready(function(){
  setTimeout(function(){
    $('#flash-notice').remove();
  }, 5000);
 })
</script>
